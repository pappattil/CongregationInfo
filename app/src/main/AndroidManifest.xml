<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.congregationinfo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.CongregationInfo">
        <activity
            android:name=".ui.ui.MinistryActivity"
            android:exported="false"
            android:label="Szántóföldi összejövetel beosztás"/>
        <activity
            android:name=".ui.ui.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.ui.StartActivity"
            android:exported="true"
            android:label="Ráckeve gyülekezet"
            android:theme="@style/Theme.CongregationInfo.NoActionBar" />
        <activity
            android:name=".ui.ui.CongregationActivity"
            android:label="Gyülekezeti összejövetel beosztás"
            android:theme="@style/Theme.CongregationInfo" />
        <activity
            android:name=".ui.ui.NameActivity"
            android:label="Felhasználó neve"
            android:theme="@style/Theme.CongregationInfo" />
    </application>

</manifest>