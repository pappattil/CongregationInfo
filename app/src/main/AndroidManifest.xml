<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.congregationinfo">
<uses-permission
    android:name="android.permission.INTERNET"/>

    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CongregationInfo"
        >
        <activity
            android:name=".ui.ScrollingActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.CongregationInfo.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.WeekdayActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.CongregationInfo">
        </activity>
        <activity
            android:name=".ui.CongregationActivity"
            android:label="Beosztás"
            android:theme="@style/Theme.CongregationInfo">
        </activity>
        <activity
            android:name=".ui.NameActivity"
            android:label="Felhasználó"
            android:theme="@style/Theme.CongregationInfo">
        </activity>
    </application>

</manifest>